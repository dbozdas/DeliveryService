<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.solvd.deliveryservice.dao.interfaceDAO.addressDAO.ICityDAO">
    <resultMap type = "com.solvd.deliveryservice.databasemodel.address.City" id = "CityResultMap" autoMapping = "false">
        <id column = "id" property = "id"/>
        <result column = "name" property = "name"/>
        <association property="state" resultMap  = "com.solvd.deliveryservice.dao.interfaceDAO.addressDAO.IStateDAO.StateResultMap"/>

    </resultMap>

    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        <![CDATA[
        Insert into Cities (name)
        Values (#{name})
        ]]>
    </insert>

    <update id = "update">
        <![CDATA[
        Update Cities
        Set
            name=#{name}
        Where id =#{id}
        ]]>
    </update>

    <delete id = "delete">
        <![CDATA[
        Delete From Cities Where id = #{id}
        ]]>
    </delete>

    <select id = "findById" resultMap = "CityResultMap">
        <![CDATA[
        Select * From Cities
        Left Join ON States
        Where id = #{id}
        ]]>
    </select>

</mapper>